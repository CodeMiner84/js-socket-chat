{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "types": [
      "node",
      "reflect-metadata"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/public/"
  ]
}
